<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cys.ssm.dao.IRoleDao">
	<resultMap id="BaseResultMap" type="com.cys.ssm.model.Role">
		<result column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="status" property="status" jdbcType="INTEGER" />
	</resultMap>

	<sql id="Base_Column_List">
		id, name, status
	</sql>

	<!-- 查询用户 -->
	<select id="queryById" resultMap="BaseResultMap"
		parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from role
		where id = #{id,jdbcType=INTEGER}
	</select>

	<!-- 批量查询用户 -->
	<select id="queryList" resultMap="BaseResultMap"
		parameterType="com.cys.ssm.model.Role">
		select
		<include refid="Base_Column_List" />
		from role
		where 1=1 
		<if test="id != null">
			and id = #{id,jdbcType=INTEGER} 
		</if>
		<if test="name != null">
			and name = #{name,jdbcType=VARCHAR} 
		</if>
		<if test="status != null">
			and status = #{status,jdbcType=INTEGER} 
		</if>
	</select>

	<!-- 插入用户 -->
	<insert id="insert" parameterType="com.cys.ssm.model.Role">
		insert into role
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="status != null">
				status, 
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="name != null">
				#{name,jdbcType=VARCHAR},
			</if>
			<if test="status != null">
				#{status,jdbcType=INTEGER},
			</if>
		</trim>
	</insert>

	<!-- 批量插入用户 -->
	<insert id="insertByBatch" parameterType="java.util.List">
		insert into role
		(id, name, status)
		select A.* from
		(
		<foreach collection="list" item="obj" index="index"
			separator="union">
			select
			#{obj.id,jdbcType=INTEGER},
			#{obj.name,jdbcType=VARCHAR},
			#{obj.status,jdbcType=INTEGER}
			from dual
		</foreach>
		) A
	</insert>

	<!-- 删除用户 -->
	<delete id="deleteById"
		parameterType="java.lang.Integer">
		delete from role
		where id = #{id,jdbcType=INTEGER}
	</delete>

	<!-- 批量删除用户 -->
	<delete id="deleteByBatch" parameterType="com.cys.ssm.model.Role">
		delete from role
		where 1=1 
		<if test="id != null">
			and id = #{id,jdbcType=INTEGER} 
		</if>
		<if test="name != null">
			and name = #{name,jdbcType=VARCHAR} 
		</if>
		<if test="status != null">
			and status = #{status,jdbcType=INTEGER} 
		</if>
	</delete>

	<!-- 更新用户 -->
	<update id="updateById" parameterType="com.cys.ssm.model.Role">
		update role
		<set>
			<if test="name != null">
				name = #{name,jdbcType=VARCHAR},
			</if>
			<if test="status != null">
				status = #{status,jdbcType=INTEGER},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>

</mapper>    